{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News-Artikel"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "headline": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "text_in_image": {
      "type": "string"
    },
    "button": {
      "type": "component",
      "repeatable": false,
      "component": "buttons.button",
      "required": true
    }
  }
}
